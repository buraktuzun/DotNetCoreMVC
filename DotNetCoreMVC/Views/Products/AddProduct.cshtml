@{
    ViewData["Title"] = "AddProduct";
}
@model Product
<h1>Ürün Ekleme</h1>


<form asp-controller="Products" asp-action="AddProduct" method="post">

    <div class="mb-3">
        <label for="Name" class="form-label">Ürün İsmi</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Ürün Fiyatı</label>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label for="Stock" class="form-label">Ürün Stok</label>
        <input class="form-control" asp-for="Stock">
    </div>
    <div class="mb-3">
        <label for="Color" class="form-label">Ürün Rengi</label>
        <input class="form-control" asp-for="Color">
    </div>
    <div class="form-check">
        <input class="form-check-input" asp-for="isPublish">
        <label class="form-check-label" for="flexCheckDefault">
            Yayınlansın mı?
        </label>
    </div>

    @foreach (var item in ViewBag.Expire)
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Expire" value="@item">
            <label class="form-check-label" for="flexRadioDefault1">
                @item
            </label>
        </div>
    }

    <button type="submit" class="btn btn-primary">Güncelle</button>


</form>
